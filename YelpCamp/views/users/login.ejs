<% layout('layouts/boilerplate') %>

<div
  class="container d-flex justify-content-center align-items-center mt-5 mb-5"
>
  <div class="row w-100">
    <div class="col-md-6 offset-md-3">
      <div class="card shadow">
        <img
          src="https://res.cloudinary.com/dvpueyrab/image/upload/v1625333521/YelpCamp/blake-wisz-TcgASSD5G04-unsplash_u6r7ww.jpg"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form action="/login" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                name="username"
                id="username"
                required
                autfocus
              />
              <div class="valid-feedback">Looks Good!</div>
              <div class="invalid-feedback">This Field needs attention</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                name="password"
                id="password"
                required
              />
              <div class="valid-feedback">Looks Good!</div>
              <div class="invalid-feedback">This Field needs attention</div>
            </div>
            <div class="d-grid">
              <button class="btn btn-success d-block">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
